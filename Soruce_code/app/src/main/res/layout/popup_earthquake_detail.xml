<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:text="More Information"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="20sp"
                android:id="@+id/tv_popup_title"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/btn_close_top"
                android:src="@drawable/ic_clear_black_24dp"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                />
            <ProgressBar
                android:layout_marginTop="6dp"
                android:id="@+id/proggress_bar_popup"
                android:layout_below="@+id/tv_popup_title"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_city_label"
                android:text="Surronding Cities"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:alpha="0.8"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_popup_title"
                />

            <TextView
                android:id="@+id/tv_city"
                android:textColor="@color/colorAccent"
                android:alpha="0.6"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_city_label"
                android:text="Hello"
                />
            
            <WebView
                android:id="@+id/web_view_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_below="@+id/tv_city"
                android:layout_height="wrap_content">

            </WebView>

            <Button
                android:textSize="12sp"
                android:id="@+id/btn_close_bottom"
                android:background="@color/colorAccent"
                android:text="Close"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/web_view_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>





        </RelativeLayout>


    </ScrollView>


</LinearLayout>